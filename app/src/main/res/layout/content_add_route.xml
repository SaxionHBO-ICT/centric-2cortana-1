<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.larsmeulenbroek.kroegenapp.activities.AddRouteActivity"
    tools:showIn="@layout/activity_add_route"
    android:weightSum="100">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/etAddRouteName"
        android:hint="Naam kroegentocht"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/sAddThema"
        android:layout_gravity="center_horizontal"
        android:layout_weight="20" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Selecteer kroegen die u wilt toevoegen"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="5" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lvAddBarList"
        android:layout_gravity="center_horizontal"
        android:layout_weight="50" />

</LinearLayout>
